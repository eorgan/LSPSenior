{
   "LSPT Header": {
      "prefix": "lspt-header",
      "body": [
         "@-- ${1:Título do arquivo} --@",
         "",
         "/*",
         " * @Author: ${2:Nome do Autor}",
         " * @Email: ${3:email@example.com}",
         " * @Date: ${4:${CURRENT_YEAR}-${CURRENT_MONTH}-${CURRENT_DATE} ${CURRENT_HOUR}:${CURRENT_MINUTE}:${CURRENT_SECOND}}",
         " * @Last Modified by: ${2:Nome do Autor}",
         " * @Last Modified time: ${4:${CURRENT_YEAR}-${CURRENT_MONTH}-${CURRENT_DATE} ${CURRENT_HOUR}:${CURRENT_MINUTE}:${CURRENT_SECOND}}",
         " * @Description: ${5:Descrição}",
         " */",
         "",
         "$0"
      ],
      "description": "Cabeçalho padrão para arquivos LSPT"
   },
   "File Header": {
      "prefix": "header",
      "body": [
         "@-- ${1:Título do Script} --@",
         "",
         "/*",
         " * @Author: ${2:Seu Nome}",
         " * @Email: ${3:seu.email@empresa.com.br}",
         " * @Date: ${CURRENT_YEAR}-${CURRENT_MONTH}-${CURRENT_DATE} ${CURRENT_HOUR}:${CURRENT_MINUTE}:${CURRENT_SECOND}",
         " * @Last Modified by: ${2:Seu Nome}",
         " * @Last Modified time: ${CURRENT_YEAR}-${CURRENT_MONTH}-${CURRENT_DATE} ${CURRENT_HOUR}:${CURRENT_MINUTE}:${CURRENT_SECOND}",
         " * @Description: ${4:Descrição}",
         " */",
         "",
         "@-- Declaração WS --@",
         "   ${5:// Declarar Web Services}",
         "",
         "@-- Declarar Funções --@",
         "   ${6:// Declarar funções}",
         "",
         "@-- Declarar Variaveis --@",
         "   ${7:// Declarar variáveis}",
         "",
         "@-- Inicio da Execução --@",
         "   $0"
      ],
      "description": "Cabeçalho completo de arquivo LSPT"
   },
   "Definir Função": {
      "prefix": "def-funcao",
      "body": [
         "Definir Funcao ${1:NomeFuncao}();"
      ],
      "description": "Declarar uma função"
   },
   "Função Completa": {
      "prefix": "funcao",
      "body": [
         "Funcao ${1:NomeFuncao}();",
         "   Inicio",
         "      $0",
         "   Fim;"
      ],
      "description": "Estrutura completa de função"
   },
   "Definir Variável Alfa": {
      "prefix": "def-alfa",
      "body": "Definir Alfa ${1:aNomeVar};$0",
      "description": "Definir variável tipo Alfa"
   },
   "Definir Variável Numero": {
      "prefix": "def-numero",
      "body": "Definir Numero ${1:nNomeVar};$0",
      "description": "Definir variável tipo Numero"
   },
   "Definir Variável Data": {
      "prefix": "def-data",
      "body": "Definir Data ${1:dNomeVar};$0",
      "description": "Definir variável tipo Data"
   },
   "Se": {
      "prefix": "se",
      "body": [
         "Se(${1:condicao})",
         "   {",
         "      $0",
         "   }"
      ],
      "description": "Estrutura condicional Se"
   },
   "Se Inicio Fim": {
      "prefix": "se-inicio",
      "body": [
         "Se(${1:condicao})",
         "   Inicio",
         "      $0",
         "   Fim;"
      ],
      "description": "Estrutura condicional Se com Inicio/Fim"
   },
   "Se Senao": {
      "prefix": "se-senao",
      "body": [
         "Se(${1:condicao})",
         "   {",
         "      ${2}",
         "   }",
         "Senao",
         "   {",
         "      ${3}",
         "   }"
      ],
      "description": "Estrutura condicional Se/Senao"
   },
   "Se Senao Se": {
      "prefix": "se-senao-se",
      "body": [
         "Se(${1:condicao1})",
         "   {",
         "      ${2}",
         "   }",
         "Senao Se (${3:condicao2})",
         "   {",
         "      ${4}",
         "   }",
         "Senao",
         "   {",
         "      ${5}",
         "   }"
      ],
      "description": "Estrutura condicional Se/Senao Se/Senao"
   },
   "Enquanto": {
      "prefix": "enquanto",
      "body": [
         "Enquanto(${1:condicao})",
         "   {",
         "      $0",
         "   }"
      ],
      "description": "Loop Enquanto"
   },
   "Enquanto Inicio Fim": {
      "prefix": "enquanto-inicio",
      "body": [
         "Enquanto(${1:condicao})",
         "   Inicio",
         "      $0",
         "   Fim;"
      ],
      "description": "Loop Enquanto com Inicio/Fim"
   },
   "Para": {
      "prefix": "para",
      "body": [
         "Para(${1:nLin}=0;${1:nLin}<${2:nQtd};${1:nLin}++)",
         "   {",
         "      $0",
         "   }"
      ],
      "description": "Loop Para"
   },
   "Cursor Tipo 1": {
      "prefix": "cursor1",
      "body": [
         "Definir Cursor ${1:Cur_Tabela};",
         "",
         "${1:Cur_Tabela}.Sql \"SELECT ${2:campos} FROM ${3:tabela} WHERE ${4:condicao}\";",
         "",
         "${1:Cur_Tabela}.AbrirCursor();",
         "",
         "Se (${1:Cur_Tabela}.Achou)",
         "   Inicio",
         "      @-- Encontrou o Registro. --@",
         "      $0",
         "   Fim;",
         "",
         "${1:Cur_Tabela}.fecharCursor();"
      ],
      "description": "Cursor Tipo 1 (antigo)"
   },
   "Cursor Tipo 2": {
      "prefix": "cursor2",
      "body": [
         "Definir Alfa ${1:aSqlCom};",
         "Definir Alfa ${2:aSqlInt};",
         "",
         "${1:aSqlCom} = \"SELECT ${3:campos} FROM ${4:tabela} WHERE ${5:condicao}\";",
         "",
         "SQL_Criar(${2:aSqlInt});",
         "SQL_UsarSqlSenior2(${2:aSqlInt}, 0);",
         "SQL_UsarAbrangencia(${2:aSqlInt}, 0);",
         "SQL_DefinirComando(${2:aSqlInt}, ${1:aSqlCom});",
         "SQL_AbrirCursor(${2:aSqlInt});",
         "Se(SQL_EOF(${2:aSqlInt}) = 0) @-- Se encontrou registro --@",
         "   {",
         "      SQL_RetornarAlfa(${2:aSqlInt}, \"${6:campo}\", ${7:aVariavel});",
         "      $0",
         "   }",
         "",
         "SQL_FecharCursor(${2:aSqlInt});",
         "SQL_Destruir(${2:aSqlInt});"
      ],
      "description": "Cursor Tipo 2 (recomendado)"
   },
   "Cursor Tipo 2 com Enquanto": {
      "prefix": "cursor2-enquanto",
      "body": [
         "Definir Alfa ${1:aSqlCom};",
         "Definir Alfa ${2:aSqlInt};",
         "",
         "${1:aSqlCom} = \"SELECT ${3:campos} FROM ${4:tabela} WHERE ${5:condicao}\";",
         "",
         "SQL_Criar(${2:aSqlInt});",
         "SQL_UsarSqlSenior2(${2:aSqlInt}, 0);",
         "SQL_UsarAbrangencia(${2:aSqlInt}, 0);",
         "SQL_DefinirComando(${2:aSqlInt}, ${1:aSqlCom});",
         "SQL_AbrirCursor(${2:aSqlInt});",
         "Enquanto(SQL_EOF(${2:aSqlInt}) = 0) @-- Se encontrou registro --@",
         "   {",
         "      SQL_RetornarAlfa(${2:aSqlInt}, \"${6:campo}\", ${7:aVariavel});",
         "      $0",
         "      SQL_Proximo(${2:aSqlInt});",
         "   }",
         "",
         "SQL_FecharCursor(${2:aSqlInt});",
         "SQL_Destruir(${2:aSqlInt});"
      ],
      "description": "Cursor Tipo 2 com loop Enquanto"
   },
   "Comentário Linha": {
      "prefix": "com-linha",
      "body": "@-- ${1:comentário} --@$0",
      "description": "Comentário de linha"
   },
   "Comentário Bloco": {
      "prefix": "com-bloco",
      "body": [
         "/*",
         " * ${1:comentário}",
         " */$0"
      ],
      "description": "Comentário de bloco"
   },
   "Mensagem Retorna": {
      "prefix": "msg-ret",
      "body": "Mensagem(Retorna, ${1:aMensagem});$0",
      "description": "Exibir mensagem de retorno"
   },
   "Mensagem Erro": {
      "prefix": "msg-erro",
      "body": "Mensagem(Erro, ${1:aMensagem});$0",
      "description": "Exibir mensagem de erro"
   },
   "ExecSQL": {
      "prefix": "execsql",
      "body": [
         "ExecSQLEx(${1:aComando}, xErro, xMensagem);",
         "Se (xErro = 0) {",
         "   @-- Sucesso --@",
         "   $0",
         "} Senao {",
         "   @-- Erro --@",
         "   Mensagem(Erro, xMensagem);",
         "}"
      ],
      "description": "Executar comando SQL com tratamento de erro"
   },
   "Definir WebService": {
      "prefix": "def-ws",
      "body": "Definir interno.com.senior.g5.${1:modulo}.${2:servico} ${3:wNome};$0",
      "description": "Definir WebService interno"
   },
   "HTTP Post": {
      "prefix": "http-post",
      "body": [
         "HttpObjeto(vHTTP);",
         "HttpDesabilitaErroResposta(vHTTP);",
         "HttpAlteraCodifCaracPadrao(vHTTP, \"utf-8\");",
         "HttpAlteraCabecalhoRequisicao(vHTTP, \"Content-Type\", \"application/json\");",
         "HttpPost(vHTTP, ${1:aUrl}, ${2:aJson}, ${3:aJsonRet});",
         "HttpLeCodigoResposta(vHTTP, nCodRet);$0"
      ],
      "description": "Realizar requisição HTTP POST"
   },
   "Função com Parâmetros": {
      "prefix": "funcao-params",
      "body": [
         "Definir Funcao ${1:NomeFuncao}(Numero ${2:pParam1}, Numero end ${3:pResultado});",
         "",
         "Funcao ${1:NomeFuncao}(Numero ${2:pParam1}, Numero end ${3:pResultado});",
         "   Inicio",
         "      ${3:pResultado} = ${2:pParam1} ${4:* 2};",
         "      $0",
         "   Fim;"
      ],
      "description": "Função com parâmetros de entrada e saída (baseado na doc oficial)"
   },
   "Cancel": {
      "prefix": "cancel",
      "body": [
         "Cancel(${1:1}); @-- Cancel(1): Cancela execução / Cancel(2): Imprime ValStr / Cancel(3): Exclui registro --@$0"
      ],
      "description": "Cancelar execução da regra (Cancel)"
   },
   "Continue": {
      "prefix": "continue",
      "body": "Continue;$0",
      "description": "Continuar execução de loop (Continue)"
   },
   "Abrir Arquivo": {
      "prefix": "abrir-arquivo",
      "body": [
         "Definir Numero ${1:nArq};",
         "",
         "${1:nArq} = Abrir(\\\"${2:arquivo.txt}\\\", ${3:Ler}); @-- Ler ou Gravar --@",
         "Se(${1:nArq} \u003e 0)",
         "   Inicio",
         "      $0",
         "      Fechar(${1:nArq});",
         "   Fim;"
      ],
      "description": "Abrir arquivo para leitura ou gravação"
   },
   "Ler Linha de Arquivo": {
      "prefix": "ler-linha",
      "body": [
         "Definir Alfa ${1:aLinha};",
         "",
         "Enquanto(LerNL(${2:nArq}, ${1:aLinha}) = 1)",
         "   Inicio",
         "      @-- Processar linha --@",
         "      $0",
         "   Fim;"
      ],
      "description": "Ler linhas de arquivo (LerNL)"
   },
   "Atualizar Campos": {
      "prefix": "atualizar-campos",
      "body": "AtualizarCampos();$0",
      "description": "Atualizar todos os campos da tela (AtualizarCampos/RefreshFields)"
   },
   "Function Declaration": {
      "prefix": "func",
      "body": [
         "Funcao ${1:NomeDaFuncao}();",
         "   Inicio",
         "      $0",
         "   Fim;"
      ],
      "description": "Declaração de função LSPT"
   },
   "Define Function": {
      "prefix": "deffunc",
      "body": [
         "Definir Funcao ${1:NomeDaFuncao}();"
      ],
      "description": "Definir função"
   },
   "Variable Declaration - Alfa": {
      "prefix": "defalfa",
      "body": [
         "Definir Alfa ${1:aNomeVariavel};"
      ],
      "description": "Declarar variável Alfa (string)"
   },
   "Variable Declaration - Inteiro": {
      "prefix": "defint",
      "body": [
         "Definir Numero ${1:nNomeVariavel};"
      ],
      "description": "Declarar variável Numerica"
   },
   "Variable Declaration - Data": {
      "prefix": "defdata",
      "body": [
         "Definir Data ${1:dNomeVariavel};"
      ],
      "description": "Declarar variável Data"
   },
   "If Statement": {
      "prefix": "if",
      "body": [
         "Se(${1:condicao}) {",
         "   $0",
         "}"
      ],
      "description": "Estrutura condicional Se"
   },
   "If-Else Statement": {
      "prefix": "ifelse",
      "body": [
         "Se(${1:condicao}) {",
         "   ${2:// código se verdadeiro}",
         "} Senao {",
         "   ${3:// código se falso}",
         "}"
      ],
      "description": "Estrutura condicional Se-Senao"
   },
   "While Loop": {
      "prefix": "while",
      "body": [
         "Enquanto(${1:condicao})",
         "   Inicio",
         "      $0",
         "   Fim;"
      ],
      "description": "Loop Enquanto"
   },
   "For Loop": {
      "prefix": "for",
      "body": [
         "Para(${1:i}=${2:0};${1:i}<${3:10};${1:i}++)",
         "   Inicio",
         "      $0",
         "   Fim;"
      ],
      "description": "Loop Para"
   },
   "SQL Query": {
      "prefix": "sql",
      "body": [
         "${1:aSqlCom} = \"SELECT ${2:campos} FROM ${3:tabela} WHERE ${4:condicao}\";",
         "",
         "SQL_Criar(${5:aSql});",
         "SQL_UsarSqlSenior2(${5:aSql}, 0);",
         "SQL_UsarAbrangencia(${5:aSql}, 0);",
         "SQL_DefinirComando(${5:aSql}, ${1:aSqlCom});",
         "SQL_AbrirCursor(${5:aSql});",
         "",
         "Enquanto(SQL_EOF(${5:aSql}) = 0)",
         "   Inicio",
         "      $0",
         "      SQL_Proximo(${5:aSql});",
         "   Fim;",
         "",
         "SQL_FecharCursor(${5:aSql});",
         "SQL_Destruir(${5:aSql});"
      ],
      "description": "Template completo de consulta SQL"
   },
   "SQL Return Alfa": {
      "prefix": "sqlalfa",
      "body": [
         "SQL_RetornarAlfa(${1:aSql}, \"${2:campo}\", ${3:aVariavel});"
      ],
      "description": "Retornar campo Alfa de SQL"
   },
   "SQL Return Integer": {
      "prefix": "sqlint",
      "body": [
         "SQL_RetornarInteiro(${1:aSql}, \"${2:campo}\", ${3:nVariavel});"
      ],
      "description": "Retornar campo Inteiro de SQL"
   },
   "SQL Return Date": {
      "prefix": "sqldate",
      "body": [
         "SQL_RetornarData(${1:aSql}, \"${2:campo}\", ${3:dVariavel});"
      ],
      "description": "Retornar campo Data de SQL"
   },
   "SQL Return Float": {
      "prefix": "sqlfloat",
      "body": [
         "SQL_RetornarFlutuante(${1:aSql}, \"${2:campo}\", ${3:fVariavel});"
      ],
      "description": "Retornar campo Flutuante de SQL"
   },
   "Execute SQL": {
      "prefix": "execsql",
      "body": [
         "ExecSQLEx(${1:xCommand}, ${2:xErro}, ${3:xMensagem});",
         "",
         "Se(${2:xErro} = 0) {",
         "   ${4:// Sucesso}",
         "} Senao {",
         "   ${5:// Erro}",
         "}"
      ],
      "description": "Executar comando SQL com tratamento de erro"
   },
   "Insert SQL": {
      "prefix": "insert",
      "body": [
         "${1:xCommand} = \"INSERT INTO ${2:tabela} (${3:campos}) VALUES (${4:valores})\";",
         "ExecSQLEx(${1:xCommand}, xErro, xMensagem);"
      ],
      "description": "Comando INSERT SQL"
   },
   "Update SQL": {
      "prefix": "update",
      "body": [
         "${1:xCommand} = \"UPDATE ${2:tabela} SET ${3:campo} = ${4:valor} WHERE ${5:condicao}\";",
         "ExecSQLEx(${1:xCommand}, xErro, xMensagem);"
      ],
      "description": "Comando UPDATE SQL"
   },
   "Message": {
      "prefix": "msg",
      "body": [
         "mensagem(${1|Retorna,Erro,Aviso|}, \"${2:mensagem}\");"
      ],
      "description": "Exibir mensagem"
   },
   "Web Service Declaration": {
      "prefix": "defws",
      "body": [
         "Definir interno.com.senior.${1:modulo}.${2:NomeWS} ${3:WSNome};"
      ],
      "description": "Declarar Web Service"
   },
   "Web Service Execute": {
      "prefix": "wsexec",
      "body": [
         "${1:WSPedido}.ModoExecucao = 1;",
         "${1:WSPedido}.Executar();",
         "",
         "aTipRet = ${1:WSPedido}.tipoRetorno;",
         "aMsgRet = ${1:WSPedido}.mensagemRetorno;"
      ],
      "description": "Executar Web Service"
   },
   "Convert Int to Alfa": {
      "prefix": "inttoalfa",
      "body": [
         "IntParaAlfa(${1:nVariavel}, ${2:aVariavel});"
      ],
      "description": "Converter Inteiro para Alfa"
   },
   "Convert Alfa to Decimal": {
      "prefix": "alfatodec",
      "body": [
         "AlfaParaDecimal(${1:aVariavel}, ${2:nVariavel});"
      ],
      "description": "Converter Alfa para Decimal"
   },
   "Convert Mask": {
      "prefix": "convmask",
      "body": [
         "ConverteMascara(${1|1,2,3|}, ${2:valor}, ${3:resultado}, \"${4:mascara}\");"
      ],
      "description": "Converter com máscara"
   },
   "Comment Block": {
      "prefix": "comment",
      "body": [
         "@-- ${1:Comentário} --@"
      ],
      "description": "Bloco de comentário LSPT"
   },
   "Log Function": {
      "prefix": "log",
      "body": [
         "Funcao GravaLog();",
         "   Inicio",
         "      xCommandLog = \"INSERT INTO ${1:tabela_log} (${2:campos}) VALUES (${3:valores})\";",
         "      ExecSQLEx(xCommandLog, xErro, xMensagem);",
         "      ",
         "      Se(xErro = 0) {",
         "         // Log gravado",
         "      } Senao {",
         "         mensagem(erro, \"Erro ao gravar log: \" + xMensagem);",
         "      }",
         "   Fim;"
      ],
      "description": "Função de log padrão"
   }
}